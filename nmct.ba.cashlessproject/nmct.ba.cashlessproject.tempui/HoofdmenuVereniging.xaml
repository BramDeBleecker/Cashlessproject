        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VerenigingHoofdmenu" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="607*"/>
            <ColumnDefinition Width="185*"/>
