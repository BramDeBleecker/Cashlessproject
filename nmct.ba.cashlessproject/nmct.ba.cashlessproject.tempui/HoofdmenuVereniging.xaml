            <RowDefinition Height="29*"/>
            <RowDefinition Height="388*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Height="35" Grid.Row="1" VerticalAlignment="Top" Width="792" Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Height="34" FontFamily="Ubuntu" FontSize="18" Grid.Column="5"/>
